{% spaceless %}
    {% set attributes = {} %}

    {% if width %}
        {% set attributes = attributes|merge({
            'width': width,
        }) %}
    {% endif %}
    {% if height %}
        {% set attributes = attributes|merge({
        'height': height,
        }) %}
    {% endif %}
    {% if class %}
        {% set attributes = attributes|merge({
        'class': class,
        }) %}
    {% endif %}
    {% if identifier %}
        {% set attributes = attributes|merge({
        'id': identifier,
        }) %}
    {% endif %}
    {# Add controls by default #}
    {% if controls is same as(true) %}
        {% set attributes = attributes|merge({
            'controls': true,
        }) %}
    {% endif %}
    {% if autoplay is same as(true) %}
        {% set attributes = attributes|merge({
            'autoplay': true,
        }) %}
    {% endif %}
    {% if loop is same as(true) %}
        {% set attributes = attributes|merge({
            'loop': true,
        }) %}
    {% endif %}
    {% set attributesCompiled = {} %}
    {% for key, value in attributes %}
        {% if value is same as(true)  %}
            {% set attributesCompiled = attributesCompiled|merge([key]) %}
        {% else %}
            {% set attributesCompiled = attributesCompiled|merge([key ~ '="' ~ value|replace({'"': '\\"'}) ~ '"']) %}
        {% endif %}
    {% endfor %}
<audio{% if attributesCompiled|length %} {{ attributesCompiled|join(' ')|raw }}{% endif %}>
    {% for source in sources %}
    <source type="{{ source.mime }}" src="{{ source.url }}">
    {% endfor %}
    <p>Your browser does not support native audio.</p>
</audio>
{% endspaceless %}
