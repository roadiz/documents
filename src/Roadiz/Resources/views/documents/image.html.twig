{% spaceless %}
    {% set attributes = {
        'alt' : alt,
    } %}
    {% if lazyload %}
        {% set attributes = attributes|merge({'data-src' : url}) %}
        {% set attributes = attributes|merge({'src' : fallback}) %}
        {% if srcset %}
            {% set attributes = attributes|merge({'data-srcset' : srcset}) %}
        {% endif %}
        {% if sizes %}
            {% set attributes = attributes|merge({'sizes' : sizes}) %}
        {% endif %}
        {% if class %}
            {% set originalClass = class %}
            {% set class = class ~ ' ' ~ lazyload_class %}
        {% else %}
            {% set originalClass = '' %}
            {% set class = lazyload_class %}
        {% endif %}
    {% else %}
        {% set originalClass = class %}
        {% set attributes = attributes|merge({'src' : url}) %}
        {% if srcset %}
            {% set attributes = attributes|merge({'srcset' : srcset}) %}
        {% endif %}
        {% if sizes %}
            {% set attributes = attributes|merge({'sizes' : sizes}) %}
        {% endif %}
    {% endif %}

    {% if loading %}
        {% set attributes = attributes|merge({'loading' : loading}) %}
    {% endif %}
    {% if averageColor %}
        {% set attributes = attributes|merge({
            'data-average-color': averageColor
        }) %}
    {% endif %}
    {% if ratio %}
        {% set attributes = attributes|merge({
            'data-ratio': ratio
        }) %}
    {% endif %}
    {% if width and not sizes %}
        {% set attributes = attributes|merge({'width' : width}) %}
    {% endif %}
    {% if height and not sizes %}
        {% set attributes = attributes|merge({'height' : height}) %}
    {% endif %}
    {% if width and ratio and not height and not sizes %}
        {% set attributes = attributes|merge({'height' : (width / ratio)|round}) %}
    {% endif %}
    {% if height and ratio and not width and not sizes %}
        {% set attributes = attributes|merge({'width' : (height * ratio)|round}) %}
    {% endif %}
    {% if class %}
        {% set attributes = attributes|merge({'class' : class}) %}
    {% endif %}
    {% if identifier %}
        {% set attributes = attributes|merge({'id' : identifier}) %}
    {% endif %}

    {% set attributesCompiled = {} %}
    {% for key, value in attributes %}
        {% if value is same as(true)  %}
            {% set attributesCompiled = attributesCompiled|merge([key]) %}
        {% else %}
            {% set attributesCompiled = attributesCompiled|merge([key ~ '="' ~ value|escape('html_attr') ~ '"']) %}
        {% endif %}
    {% endfor %}

    <img {{ attributesCompiled|join(' ')|raw }} />
    {% if lazyload and not avoidNoScript %}
        {% block noscript %}
            <noscript{% block noscript_attributes %}{% endblock %}>
                {% include 'documents/image.html.twig' with {
                    'lazyload': false,
                    'class': originalClass,
                    'avoidNoScript': true
                } %}
            </noscript>
        {% endblock %}
    {% endif %}
{% endspaceless %}
