{
    "name": "roadiz/documents",
    "description":"Roadiz sub-package for Document system.",
    "license":"MIT",
    "type": "library",
    "keywords": [
        "roadiz",
        "cms",
        "backoffice",
        "rezo zero"
    ],
    "authors": [
        {
            "name": "Ambroise Maupate",
            "email": "ambroise@roadiz.io",
            "homepage": "https://www.roadiz.io",
            "role": "Lead developer"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "ext-fileinfo": "*",
        "doctrine/orm": "~2.8.5 || ~2.12.2",
        "enshrined/svg-sanitize": "^0.15",
        "guzzlehttp/guzzle": "^6.3 || ^7.2.0",
        "guzzlehttp/psr7": "^2.0",
        "intervention/image": "^2.5",
        "jms/serializer": "^2.3.0 || ^3.9.0",
        "monolog/monolog": "^1.24.0 || ^2.1.1",
        "roadiz/models": "~2.1.0 || dev-develop",
        "symfony/asset": "^5.0.7",
        "symfony/event-dispatcher": "^5.0.7",
        "symfony/filesystem": "^5.0.7",
        "symfony/finder": "^5.0.7",
        "symfony/http-foundation": "^5.0.7",
        "symfony/options-resolver": "^5.0.7",
        "symfony/serializer": "^5.0.7",
        "twig/twig": "^3.1"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.4.2",
        "atoum/atoum": "^4.0.0",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^1.5.3",
        "phpstan/phpstan-doctrine": "^1.3.1"
    },
    "autoload": {
        "psr-4": {
            "RZ\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
